<Window x:Name="GlassMainWindow" x:Class="Glass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Glass"
        mc:Ignorable="d"
        Title="DiscordGlass-x64" 
        WindowStyle="None" 
        Topmost="True" 
        WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True" 
        Cursor="None" 
        Visibility="Visible" 
        Background="{x:Null}" 
        Icon="media/Glass.ico" 
        VerticalAlignment="Top" 
        HorizontalAlignment="Left" 
        Foreground="{x:Null}" 
        WindowState="Maximized" 
        Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}" 
        Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}" 
        Opacity="0" ResizeMode="NoResize" ContentRendered="OnContentRendered" Loaded="OnWindowLoaded">
    <Image x:Name="GlassImage" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}" Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}" Source="media/Clear.png" Cursor="None" Stretch="Fill"/>
</Window>
